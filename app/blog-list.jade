								];
							for blog in blogList
								div.blog-item
									div.site-screen
										div.img_wrap
											img(src= blog.image alt= blog.title)
									div.site-descr
										span tsumbaluk.in.ua || 28.12.2016
										h3.anim-title= blog.title							
										p= blog.introtext
											a(href="inner-blog.html") Читать..
						div.col-md-12
							div.pagination.light.mt3
								ul.pagination
									li.control
										a(href="#")
											i.fa.fa-angle-left
									li.active
										a(href="#") 1
									li
										a(href="#") 2			
									li
										a(href="#") 3				
									li.control
										a(href="#")
											i.fa.fa-angle-right						
	
		include templates/structure/footer	
		include templates/structure/scripts