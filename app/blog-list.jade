include templates/helpers/mixins

doctype html
html.no-js(lang="ru")
	include templates/structure/head
	body
		include templates/structure/header-inner
		main
			section#blog
				div.container
					div.row
						div.col-md-12
						
							ul.bread
								li
									a(href="/") Главная
								li
									a(href="portfolio-list.html") Портфолио
								li Rif-line.com

							h2.title-left.mt2 Blog list
						div.col-md-12							
							-
								var blogList = [
									{
										image: "img/gulp.jpg",
										title: "Стартовая настройка Gulp",
										sub_title: "пошаговое руководство",
